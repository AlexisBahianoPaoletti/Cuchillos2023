@using Cuchillos2023.Models.Models;
@model Pais
@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-action="Create">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Agregar País</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="NombrePais"></label>
            <input asp-for="NombrePais" class="form-control" />
            <span asp-validation-for="NombrePais" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="width:200px">Guardar</button>
        <a asp-controller="Pais" asp-action="Index" style="width:200px" class="btn btn-success">Volver</a>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
