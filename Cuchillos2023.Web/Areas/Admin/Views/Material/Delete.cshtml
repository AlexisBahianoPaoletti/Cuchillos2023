@using Cuchillos2023.Models.Models;
@model Material
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-controller="Material" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Borrar Material</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="NombreMaterial"></label>
            <input asp-for="NombreMaterial" class="form-control" disabled />
        </div>

        <button type="submit" class="btn btn-danger" style="width:200px">Borrar</button>
        <a asp-controller="Material" asp-action="Index" style="width:200px" class="btn btn-success">Volver</a>
    </div>
</form>
