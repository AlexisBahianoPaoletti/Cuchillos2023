@using Cuchillos2023.Models.Models;
@model Categoria
@{
    ViewData["Title"] = "Edit";
}

<form method="post" asp-controller="Categoria" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Editar Categoría</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="NombreCategoria" class="form-label"></label>
            <input asp-for="NombreCategoria" class="form-control" />
            <span asp-validation-for="NombreCategoria" class="text-danger"></span>
        </div>
@*         <div class="mb-3">
            <label asp-for="DisplayOrder" class="form-label"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div> *@

        <button type="submit" class="btn btn-warning mx-3" style="width:200px">Editar</button>
        <a asp-controller="Categoria" asp-action="Index" style="width:200px" class="btn btn-success mx-3">
            Volver
        </a>

    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}