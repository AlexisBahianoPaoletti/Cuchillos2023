@using Cuchillos2023.Models.Models;
@model Categoria
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-controller="Categoria" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Borrar Categoría</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="NombreCategoria"></label>
            <input asp-for="NombreCategoria" class="form-control" disabled />
        </div>
@*         <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" disabled />

        </div> *@
        <button type="submit" class="btn btn-danger" style="width:200px">Borrar</button>
        <a asp-controller="Categoria" asp-action="Index" style="width:200px" class="btn btn-success">Volver</a>
    </div>
</form>
