@using Cuchillos2023.Web.ViewModels

@model IEnumerable<CiudadListVm>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row w-75">
        <div class="col-6">
            <h2>Lista de Ciudades</h2>

        </div>
        <div class="col-6 text-end">
            <a asp-controller="Ciudad" asp-action="UpSert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp;
                Agregar
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped w-75">
        <thead>
            <tr>
                <th style="width:50%"><label asp-for="@Model.First().NombreCiudad"></label></th>
                <th style="width:25%"><label asp-for="@Model.First().NombreProvincia"></label></th>
                <th style="width:25%">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.NombreCiudad</td>
                        <td>@item.NombreProvincia</td>
                        <td>
                            <a class="btn btn-warning" asp-controller="Ciudad" asp-action="UpSert" asp-route-id="@item.Id">
                                <i class="bi bi-pencil-square"></i>&nbsp;
                                Editar
                            </a>
                            <a class="btn btn-danger" asp-controller="Ciudad" asp-action="Delete" asp-route-id="@item.Id">
                                <i class="bi bi-trash3"></i> &nbsp;
                                Borrar
                            </a>

                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2">
                        Aún no se han agregado ciudades
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>


