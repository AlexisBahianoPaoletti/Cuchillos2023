@using Cuchillos2023.Web.ViewModels

@model IEnumerable<ProductoListVm>
@{
    ViewData["Title"] = "Index";
    string ShrinkTitle(string title)
    {
        return title.Length > 20 ? $"{title.Substring(0, 20)}..." : title;
    }
}
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid; border-radius:3px;">
                    <div class="card">
                        <img src="@item.ImagenUrl" width="200px" height="300px" class="card-img-top rounded" />
                        <div class="card-body">
                            <h5 class="card-title text-info">@item.NombreCuchillo</h5>
                            <p class="card-text text-info">Precio: $ @item.Precio</p>
                           
                        </div>

                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-secondary form-control" asp-route-id="@item.Id">
                            Detalles
                        </a>
                    </div>
                </div>
            </div>
        </div>

    }

</div>

