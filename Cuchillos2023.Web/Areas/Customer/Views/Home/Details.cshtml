@model ShoppingCart
@{
    ViewData["Title"] = "Details";
}

<form method="post">

    <div class="card  container pt-4">
        <div class="card-header bg-primary text-light ml-0  row ">
            <div class="col-12 col-md-6">
                <h1 class="text-white-50">@Model.Cuchillo.NombreCuchillo</h1>
                <p class="text-warning">by @Model.Cuchillo.NombreCuchillo</p>
            </div>
            <div class="col-12 col-md-6 text-end pt-4">
                <span class="badge bg-info pt-2" style="height:30px;">@Model.Cuchillo.Material.NombreMaterial</span>
                <span class="badge bg-warning pt-2" style="height:30px;">@Model.Cuchillo.Categoria.NombreCategoria</span>
            </div>
        </div>
        <div class="card-body row container">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-8 col-lg-8">

                        <div class="row pl-2">
                            <h5 class="text-muted">Cuchillo : @Model.Cuchillo.NombreCuchillo</h5>
                        </div>
                        <div class="row pl-2">
                            <h5 class="text-muted pb-2">List Price: <strike>@Model.Cuchillo.NombreCuchillo</strike></h5>
                        </div>
                 
                        <div class="row pl-2">
                            <p class="text-secondary">@Html.Raw(@Model.Cuchillo.Precio)</p>
                        </div>
                        <div class="row pl-2">
                            <div class="col-2 text-primary"><h4>Count</h4></div>
                            <div class="col-10">@Model.Quantity</div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-3 offset-lg-1 text-center">
                        <img src="@Model.Cuchillo.ImagenUrl" width="100%" class="rounded" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a class="btn btn-success form-control " style="height:50px;" asp-action="Index">Volver al Inicio</a>
                </div>
                <div class="col-12 col-md-6 pb-1">
                    <button type="submit" value="Add to Cart" class="btn btn-primary form-control" style="height:50px;">Añadir al Carrito</button>
                </div>
            </div>
        </div>
    </div>
</form>
